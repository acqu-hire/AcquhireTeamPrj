<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aqh.board.domain.dao.CommunityDAO">

    <!-- CREATE -->
    <insert id="createPost" parameterType="BoardDTO">
    INSERT INTO BOARD
        (id,menu,category,file,writeDay,title,contents) VALUES
        (#{id},"COMMUNITY",#{category},#{file},sysdate(),#{title},#{contents});
    </insert>
    <!-- READ -->
    
    <select id="getAllCommunityPostList" resultType="BoardDTO">
        SELECT * FROM (SELECT * FROM board ORDER BY bNo DESC) SUBQUERY
        <trim prefix="WHERE (" prefixOverrides="AND" suffix=")">
				
            <if test="category != null ">
                AND category = #{category}
            </if>
            
			<if test="type != null &amp;&amp; !type.equals('')">
				<if test="type == 'contents'">
	            	AND contents LIKE concat('%',#{keyword},'%')
	            </if>
	            <if test="type == 'title'">
	            	AND title LIKE concat('%',#{keyword},'%')
	            </if>
	            <if test="type == 'id'">
	            	AND id LIKE concat('%',#{keyword},'%')
	            </if>
	            <if test="type == 'all'">
	                AND contents LIKE concat('%',#{keyword},'%')
	                OR title LIKE concat('%',#{keyword},'%')
	                OR id LIKE concat('%',#{keyword},'%')
	            </if>
            </if>
    </trim>
            
			limit #{page},#{limit}
        <!--
            (SELECT * FROM board ORDER BY bNo DESC) SUBQUERY LIMIT #{page},#{limit};
            쿼리 추가 해야함. -->
    </select>
    
    <select id="getPost" resultType="BoardDTO">
    SELECT * FROM board where BNO = #{bNo}
    </select>
    
    <select id="getTotal" resultType="long">
        SELECT count(*) FROM board
            <trim prefix="WHERE (" prefixOverrides="AND" suffix=")">
            <if test="category != null "> AND category = #{category} </if>
                
                <if test="type != null &amp;&amp; !type.equals('')">
                    <if test="type == 'contents'">
                        AND contents LIKE concat('%',#{keyword},'%')
                    </if>
                    <if test="type == 'title'">
                        AND title LIKE concat('%',#{keyword},'%')
                    </if>
                    <if test="type == 'id'">
                        AND id LIKE concat('%',#{keyword},'%')
                    </if>
                    <if test="type == 'all'">
                        AND contents LIKE concat('%',#{keyword},'%')
                        OR title LIKE concat('%',#{keyword},'%')
                        OR id LIKE concat('%',#{keyword},'%')
                    </if>
                    AND menu = "COMMUNITY"
                </if>
            </trim>
    </select>
    
    <!-- UPDATE -->
    <update id="updatePost">
    UPDATE board SET category = #{category},file = #{file},title = #{title},contents = #{contents}
    	<trim prefix="WHERE">
    		<if test=" bNo != null">bNo = #{bNo}</if>
        </trim>
    </update>
    
    <!-- DELETE -->
    <delete id="deletePost" parameterType="long">
    DELETE FROM board WHERE bNo = #{bNo}
    </delete>
    
</mapper>